<h1> This is my new form </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error | %>
<li style="color:red"> <%= error %> </li>
<% end %> 
<% end %>

<%= form_for @member do | f | %>
<%= f.label :name %> 
<%= f.text_field :name %>
<%= f.label :age %> 
<%= f.text_field :age %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%= f.submit %>
<% end %>