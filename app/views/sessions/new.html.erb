<section id="showcase">
    <div class="container">
        <h1>
            <% if flash[:errors] %>
            <li style = "color:red"> <%= flash[:errors] %> </li>
            <% end %> 

            <%= form_for @member, :url => '/login' do | f | %>
            <%= f.label :email %>
            <%= f.text_field :email %> <br>
            <%= f.label :password %>
            <%= f.password_field :password %> <br>
            <%= f.submit "Log In" %>
            <% end %>
        </h1>
    </div>
</section>